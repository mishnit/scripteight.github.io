.Tutorial
  user-select text
  border-top solid $palette-5 2px
  background $palette-6
  color $palette-3
  @extend .VT323
  font-size $font-large

  >p:first-child
    margin-top 0.5rem

  .code
    margin 0
    padding 0
    padding-left 1.5rem
    &:last-of-type
      margin-bottom 1.5rem

  position fixed
  bottom 0
  width 100%
  min-height 3rem
  z-index 10
  padding 0.75rem

  &.in-run
    margin-top 1.5rem
    position relative
    min-height auto

  .top-bar, .bottom-bar
    display flex
    justify-content space-between
    p
      margin 0

  button
    text-decoration underline

  .buttons
    user-select none
    button
      padding 0 0.5rem
    &:before
      content '>'
